<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include settings for cloud backup -->
        <include domain="sharedpref" path="app_settings.xml" />

        <!-- Exclude sensitive connection data -->
        <exclude domain="sharedpref" path="connection_prefs.xml" />
        <exclude domain="database" path="trusted_devices.db" />
    </cloud-backup>

    <device-transfer>
        <!-- Include all settings for device transfer -->
        <include domain="sharedpref" path="." />
        <exclude domain="database" path="trusted_devices.db" />
    </device-transfer>
</data-extraction-rules>